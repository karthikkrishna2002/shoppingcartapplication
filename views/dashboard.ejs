<!DOCTYPE html>
<html lang="en">
<head>
    <script>
         if (!log) {
          console.log(log);
          window.location.href = "/login";
        }
    </script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .card{
            width:100%;
        }
    </style>
</head>
<body>
    <%- include('header.ejs') %>
    <div class="container-fluid mt-5 mb-5">
        <h1 class="text-center"><b>Products</b></h1>
        <div class="mt-3 mb-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="card" style="width:150%">
                        <div class="card-header"><b>Product List</b></div>
                        <div class="card-body">
                            <div class="row">
                                <% products.forEach(product => { %>
                                <div class="col-md-4 mb-5 text-center" >
                                    <img src="/images/<%= product.img %>" style="width:200px" style="height:200px" class="img-thumbnail mb-3" />
                                    <h4><b><%= product.name %></b></h4>
                                    <p><%= products.description %></p>
                                    <h3 class="text-danger"><%= product.price %></h3>
                                    <form method="post" action="">
                                        <input type="hidden" name="id" value="<%= product.Id %>" />

                                        <input type="hidden" name="price" value="<%= product.price %>" />
                                        <input type="hidden" name="name" value="<%= product.name %>" />

                                      <input type="submit" style="margin-left: 38%;" class="btn btn-warning" value="Add to Cart" />
                                    </form>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
</html>